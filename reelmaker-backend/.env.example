# =========================
# ReelMaker-AI (.env.example)
# =========================

# Server
PORT=4000
PUBLIC_BASE_URL=http://localhost:4000

# Auth
JWT_SECRET=change-me-in-production

# Database (SQLite example)
DB_PATH=./reelmaker.db

# Uploads
UPLOAD_DIR=./uploads
UPLOAD_MAX_MB=2048

# -------------------------
# AWS / Bedrock
# -------------------------
AWS_DEFAULT_REGION=eu-central-1
AWS_REGION=eu-central-1

# Use either long-lived keys OR temporary session keys.
# Prefer IAM roles/SSO in production.
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
AWS_SESSION_TOKEN=YOUR_AWS_SESSION_TOKEN_OPTIONAL

# Bedrock
BEDROCK_MODEL_ID=eu.anthropic.claude-sonnet-4-20250514-v1:0
BEDROCK_MAX_INPUT_TOKENS=200000
BEDROCK_PROMPT_OVERHEAD_TOKENS=2000
BEDROCK_MAX_TOKENS_OUT=64000

# -------------------------
# FFmpeg / ffprobe
# -------------------------
# If ffmpeg/ffprobe are in PATH, you can use:
# FFMPEG_BIN=ffmpeg
# FFPROBE_BIN=ffprobe
FFMPEG_BIN=/absolute/path/to/ffmpeg
FFPROBE_BIN=/absolute/path/to/ffprobe

# Subtitle/overlay styling
FFMPEG_FONT_FILE=/System/Library/Fonts/Supplemental/Arial.ttf
WATERMARK_PATH=./assets/watermark.png

# -------------------------
# whisper.cpp / whisper-cli
# -------------------------
WHISPER_BIN=/opt/homebrew/bin/whisper-cli
WHISPER_MODEL=/absolute/path/to/whisper.cpp/models/ggml-base.bin

# -------------------------
# TTS (Kokoro)
# -------------------------
TTS_ENGINE=kokoro_strict
KOKORO_MODEL_ID=onnx-community/Kokoro-82M-v1.0-ONNX
KOKORO_DTYPE=q8

# -------------------------
# Summary settings
# -------------------------
SUMMARY_MAX_INPUT_TOKENS=12000
SUMMARY_PROMPT_OVERHEAD_TOKENS=1200
